{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <div id="app" :order_reference="{{ orderRef }}" xmlns="http://www.w3.org/1999/html">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9 col-lg-8">
                    <nav class="navbar menu navbar-fixed-top">
                        <button class="btn btn-default" role="checkbox" @click="toggleFavoriteFilter">Filtrer par <span class="fa fa-heart pull-right"></span></button>
                        <input type="text" placeholder="recherche par prix" v-model="priceFilter">
                        <input type="text" placeholder="recherche par nom" v-model="nameFilter">
                    </nav>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div id="pizzas" class="col-md-9 col-lg-8">
                    <div class="row">
                        <pizza v-for="pizza in pizzas | filterByFavorite | filterBy priceFilter in 'price' | filterBy nameFilter in 'name'" :pizza="pizza" class="col-sm-5 col-md-4 col-lg-3"></pizza>
                    </div>
                </div>
                <div class="col-md-3 col-lg-4 pull-right">
                    <basket></basket>
                </div>
            </div>
        </div>

        {# includes templates #}
        {% include 'AppBundle:templates:pizza.html.twig' %}
        {% include 'AppBundle:templates:row.html.twig' %}
        {% include 'AppBundle:templates:basket.html.twig' %}
    </div>
{% endblock %}
