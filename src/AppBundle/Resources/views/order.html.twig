{% extends 'AppBundle::layout.html.twig' %}

{% block content %}

    <div id="app" :order_reference="{{ orderRef }}" :current_username="{{ user.username|json_encode }}">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9 col-lg-8">
                    <nav class="navbar menu navbar-fixed-top">
                        <form class="form-inline">
                            <div class="form-group">
                                <button class="btn btn-default form-control" role="checkbox"
                                        @click.prevent="toggleFavoriteFilter">
                                    Filtrer par <span class="fa fa-heart pull-right"></span></button>
                                <input type="text" placeholder="recherche par nom" v-model="nameFilter" class="form-control">
                                <button class="btn btn-default form-control" @click.prevent="toggleAlphaSort"  role="checkbox">
                                    <span class="fa" :class="{'fa-sort-alpha-asc': alphaSort == -1, 'fa-sort-alpha-desc': alphaSort == 1}"></span></button>
                            </div>
                        </form>
                    </nav>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div id="pizzas" class="col-md-9 col-lg-8">
                    <div class="row">
                        <pizza v-for="pizza in pizzas | filterByFavorite | filterBy nameFilter in 'name' | orderBy 'name' alphaSort"
                               :pizza="pizza" class="col-sm-5 col-md-4 col-lg-3"></pizza>
                    </div>
                </div>
                <div class="col-md-3 col-lg-4 pull-right">
                    <basket></basket>
                </div>
            </div>
        </div>

        {# includes templates #}
        {% include 'AppBundle:templates:pizza.html.twig' %}
        {% include 'AppBundle:templates:row.html.twig' %}
        {% include 'AppBundle:templates:basket.html.twig' %}
    </div>
{% endblock %}
