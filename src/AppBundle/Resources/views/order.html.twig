{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div id="app">
        
        <h1>${pageTitle}</h1>

            <div id="pizza-cards">
                <ul class="list-inline list-unstyled">
                    {% for pizza in pizzas %}
                        {% include 'AppBundle:partials:_pizza-card.html.twig' %}
                    {% endfor %}
                </ul>
            </div>

            <div id="order-basket">
                <div id="order-basket-header">
                    <h1>Commande</h1>
                    <h2 id="order-reference">{{ order.createdAt|date('d-m-y') }}</h2>
                </div>

                <ul id="pizza-list" class="list-unstyled"></ul>
            </div>

    </div>
{% endblock %}
