<form action="{{ path('login') }}" method="POST" class="navbar-form navbar-right" id="login-form">
        <input type="hidden" name="csrf_token" value="{{ csrf_token('login_form') }}"/>

        <div class="form-group">
            <input type="email" id="login-email" name="_email" placeholder="Email" class="form-control" required/>
        </div>

        <div class="form-group">
            <input type="password" id="login-password" name="_password" placeholder="Mot de passe" class="form-control" required/>
        </div>

        <button type="submit" class="btn btn-success">Login</button>
</form>