{# modal config #}
<div :id="group.id" class="modal fade" role="dialog" tabindex="-1" v-if="group.userIsAdmin">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">${ group.name }</h3>
            </div>

            <form>
                <div class="modal-body">
                    <div class="row">
                        {# config #}
                        <div class="col-xs-12 col-sm-6 config">
                            <div class="form-group">
                                <label>Nom du groupe :</label>
                                <input type="text" v-model="group.name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Couleur du groupe :</label>
                                <input type="color" v-model="group.color" class="form-control">
                            </div>
                            <div class="form-group">
                                <p>Image du groupe :</p>
                                <label class="btn btn-success btn-block btn-file">
                                    Parcourir<span class="fa fa-picture-o pull-right"></span>
                                    <input type="file" class="hidden">
                                </label>
                            </div>
                        </div>

                        {# group members #}
                        <div class="col-xs-12 col-sm-6 members">
                            <div class="row table-header">
                                <div class="col-xs-2">Admin</div>
                                <div class="col-xs-9">Membre</div>
                            </div>

                            <div class="row member" v-for="member in group.members">
                                <input class="col-xs-2" type="checkbox" :checked="member.isAdmin" value="${member.id}" v-model="adminIds">
                                <label class="col-xs-9">${member.username}</label>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button @click.prevent="revertChanges" type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button @click.prevent="updateGroup" type="submit" class="btn btn-primary" >Enregistrer</button>
                </div>
            </form>
        </div>

    </div>
</div>