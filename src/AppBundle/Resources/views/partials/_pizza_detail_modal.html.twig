<div class="modal fade" id="pizza-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content pizza-card" data-pizzaid="{{ pizza.id }}">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="pizza-modal-title" data-name="{{ pizza.name }}">{{ pizza.name|upper }}</h4>
            </div>
            <div class="modal-body">
                <img class="pizza-card-img img-responsive"
                     src="{{ asset('assets/images/pizzas/' ~ pizza.image ~ '.jpg') }}" alt="{{ pizza.name }}">
                <p class="pizza-modal-ingredients"
                   data-ingredients="{{ pizza.ingredients }}">{{ pizza.ingredients }}</p>
            </div>
            <div class="modal-footer">
                <ul class="list-unstyled list-inline">
                    <li  class="pull-left">
                        <a href="#" class="pizza-clipboard"
                           data-clipboard-text="https://{{ app.request.host }}{{ asset('assets/images/pizzas/screenshots/' ~ pizza.image ~ '.jpg') }}"><span
                                    class="glyphicon glyphicon-camera"></span></a>
                    </li>
                    <li class="pizza-price">
                        <p class="pizza-card-price pizza-price"
                           data-price="{{ pizza.price }}">{{ pizza.price|number_format('2', ',', '.') }}&nbsp;â‚¬</p>
                    </li>
                    <li class="pull-right">
                        {% if favorite %}
                            <a href="#" class="fav remove-favorite"><span class="glyphicon glyphicon-heart"></span></a>
                        {% else %}
                            <a href="#" class="fav add-favorite"><span class="glyphicon glyphicon-heart-empty"></span></a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>